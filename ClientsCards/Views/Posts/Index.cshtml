@model IEnumerable<ClientsCards.Shared.Post>
@{
    ViewData["Title"] = "Posts";
}

<h2>User Name</h2>
@Html.Label("UserName", (string)ViewBag.UserName) 

<br />
<h2>@Html.Label("Message", (string)ViewBag.Message)</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.body)
        </th>
        <th></th>
    </tr>
  
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.body)
                </td>

                <td>
                @Html.ActionLink("Delete", "Delete", new { PostId = item.id, IdUser = ViewBag.UserId, nameUser = ViewBag.UserName})
            </td>
            </tr>
        }

    
</table>